{
  "name": "@datalayer/desktop",
  "version": "0.0.1",
  "description": "Datalayer Desktop - Official desktop application",
  "main": "dist/main/index.js",
  "author": "Datalayer",
  "license": "BSD-3-Clause",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/datalayer/desktop.git"
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "npm run type-check && cross-env NODE_OPTIONS=--max-old-space-size=4096 electron-vite build && node scripts/fix-production-bundle.js",
    "preview": "electron-vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --quiet",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,json,md}\"",
    "check": "npm run format:check && npm run lint && npm run type-check",
    "check:fix": "npm run format && npm run lint:fix && npm run type-check",
    "start": "rm -rf node_modules/.vite dist .electron-vite && electron-vite dev",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac --universal",
    "dist:mac-universal": "npm run build && electron-builder --mac --universal",
    "dist:mac-intel": "npm run build && electron-builder --mac --x64",
    "dist:mac-arm": "npm run build && electron-builder --mac --arm64",
    "dist:mac-all": "npm run build && electron-builder --mac --x64 --arm64",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:dev-prod": "cross-env ELECTRON_DEV_PROD=true npm run build && cross-env ELECTRON_DEV_PROD=true electron-builder",
    "dist:dev-prod:mac": "cross-env ELECTRON_DEV_PROD=true npm run build && cross-env ELECTRON_DEV_PROD=true electron-builder --mac --universal",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "dist:dev-prod:win": "cross-env ELECTRON_DEV_PROD=true npm run build && cross-env ELECTRON_DEV_PROD=true electron-builder --win",
    "dist:dev-prod:linux": "cross-env ELECTRON_DEV_PROD=true npm run build && cross-env ELECTRON_DEV_PROD=true electron-builder --linux"
  },
  "dependencies": {
    "@datalayer/core": "^0.0.12",
    "@datalayer/jupyter-lexical": "^1.0.4",
    "@datalayer/jupyter-react": "^1.1.0",
    "@datalayer/lexical-loro": "^0.0.7",
    "@jupyterlab/services": "^7.0.0",
    "@lexical/code": "^0.35.0",
    "@lexical/link": "^0.35.0",
    "@lexical/list": "^0.35.0",
    "@lexical/react": "^0.35.0",
    "@lexical/rich-text": "^0.35.0",
    "@primer/react": "^36.27.0",
    "@primer/react-brand": "^0.58.1",
    "@types/ws": "^8.18.1",
    "electron-log": "^5.4.3",
    "electron-store": "^10.1.0",
    "fast-deep-equal": "^3.1.3",
    "form-data": "^4.0.4",
    "json5": "^2.2.3",
    "lexical": "^0.35.0",
    "lodash": "^4.17.21",
    "prettier": "^3.6.2",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ws": "^8.18.3",
    "zustand": "^5.0.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.45.1",
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.5"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@eslint/js": "^9.36.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@types/form-data": "^2.2.1",
    "@types/node": "^20.16.17",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^18.3.13",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "electron": "34.5.8",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "eslint": "^9.36.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "glob": "^11.0.3",
    "patch-package": "^8.0.0",
    "typedoc": "^0.28.13",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vite-plugin-string": "^1.2.3",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0"
  },
  "build": {
    "appId": "io.datalayer.desktop",
    "productName": "Datalayer Desktop",
    "electronVersion": "34.5.8",
    "directories": {
      "output": "dist-electron"
    },
    "generateUpdatesFilesForAllChannels": false,
    "publish": null,
    "files": [
      "dist/**/*",
      "resources/**/*",
      "!node_modules/bufferutil/build/**/*",
      "!node_modules/utf-8-validate/build/**/*",
      "!node_modules/.cache",
      "!node_modules/.vite"
    ],
    "icon": "resources/icon.png",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "resources/icon.png",
      "identity": null,
      "notarize": false,
      "target": [
        {
          "target": "default",
          "arch": "universal"
        }
      ],
      "mergeASARs": false,
      "singleArchFiles": "*"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development",
      "icon": "resources/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icon.png"
    }
  }
}
